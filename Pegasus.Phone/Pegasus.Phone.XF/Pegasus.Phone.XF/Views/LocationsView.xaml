<?xml version="1.0" encoding="UTF-8"?>
<ContentView
  xmlns="http://xamarin.com/schemas/2014/forms"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
  x:Class="Pegasus.Phone.XF.LocationsView" >
	<ContentView.Content>
    <Grid VerticalOptions="Fill" HorizontalOptions="Fill">
      <Grid.RowDefinitions>
        <RowDefinition Height="1*" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>

      <maps:Map x:Name="Map" HorizontalOptions="Fill" VerticalOptions="Fill" />
      <Label Text="{Binding ChaseVehicleToCraftDistanceText}" Grid.Row="1" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
    </Grid>
	</ContentView.Content>
</ContentView>
