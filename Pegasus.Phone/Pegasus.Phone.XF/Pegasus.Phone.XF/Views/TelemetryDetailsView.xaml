<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Pegasus.Phone.XF.TelemetryDetailsView">
	<ContentView.Content>
    <StackLayout VerticalOptions="Center" HorizontalOptions="CenterAndExpand">
      <Label Text="Details page...." HorizontalOptions="CenterAndExpand" />
      <Label Text="{Binding Data.Humidity}" HorizontalOptions="CenterAndExpand" />
      <Label Text="{Binding Data.AtmosphericPressure}" HorizontalOptions="CenterAndExpand" />
      <ListView ItemsSource="{Binding TelemetryItems}" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <StackLayout Orientation="Horizontal">
                <Label Text="{Binding Name}" Font="15,Bold" HorizontalOptions="StartAndExpand" />
                <Label Text="..." HorizontalOptions="Center" />
                <Label Text="{Binding Value}" HorizontalOptions="EndAndExpand" />
              </StackLayout>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
      <Label Text="Details page...." HorizontalOptions="CenterAndExpand" />
    </StackLayout>
	</ContentView.Content>
</ContentView>
