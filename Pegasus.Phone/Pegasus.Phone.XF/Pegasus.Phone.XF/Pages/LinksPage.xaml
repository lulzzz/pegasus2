<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pegasus.Phone.XF.Pages.LinksPage" Title="Links">
  <StackLayout Padding="5, 5, 5, 5"
             Orientation="Vertical"
             Spacing="5" >

    <Label Text="More on Mission Pegasus"
           FontSize="Large"/>

    <Label
      Text="Follow the links to learn more"
           FontSize="Small"
           BackgroundColor="Teal"
           XAlign="Center" />

    <StackLayout Padding="5,20,5,5" Orientation="Vertical" Spacing="5">
      <Label Text="Mission Pegasus Website" FontSize="Small"/>
      <Label Text="Our Facebook Page" FontSize="Small"/>
      <Label Text="Sign up for text updates" FontSize="Small"/>
      <Label Text="Live Video Feed" FontSize="Small"/>
    </StackLayout>
    
  </StackLayout>
</ContentPage>