<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pegasus.Phone.XF.Pages.TextCraftPage" Title="TextCraft">
  <StackLayout Padding="5, 5, 5, 5"
               Orientation="Vertical"
               Spacing="5" >

    <Label Text="Say Hello to Pegasus II Craft"
           FontSize="Medium"
           HorizontalOptions="Center" />

    <Label
      Text="{Binding CraftTelemetry.Data.AltitudeSpeed, StringFormat='Craft - {0}'}"
           FontSize="Small"
           BackgroundColor="Teal"
           XAlign="Center" />
    
    <Editor HeightRequest="200"/>
    <Label Text="Your message here - 40 characters or less" FontSize="Small"/>

    <Button Text="Send"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand" />
  </StackLayout>
</ContentPage>