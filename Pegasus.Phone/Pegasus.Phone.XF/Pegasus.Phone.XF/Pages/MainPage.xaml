<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pegasus="clr-namespace:Pegasus.Phone.XF;assembly=Pegasus.Phone.XF"
             x:Class="Pegasus.Phone.XF.MainPage">
  <StackLayout VerticalOptions="Center" HorizontalOptions="CenterAndExpand">
    <pegasus:CraftTelemetryView BindingContext="{Binding CraftTelemetry}" />
    <Label Text="{Binding AppData.StatusMessage}" HorizontalOptions="CenterAndExpand" />
    <Label Text="{Binding AppData.MessageCount, StringFormat='received {0} messages'}" HorizontalOptions="CenterAndExpand" />
    <Button Text="Go" Clicked="ConnectWebSocket" />
  </StackLayout>
</ContentPage>