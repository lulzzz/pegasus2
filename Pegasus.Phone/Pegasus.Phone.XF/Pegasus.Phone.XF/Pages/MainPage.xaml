<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pegasus.Phone.XF.Pages.MainPage">
  <StackLayout VerticalOptions="Center" HorizontalOptions="CenterAndExpand">
    <Label Text="{Binding StatusMessage}" HorizontalOptions="CenterAndExpand" />
    <Label Text="{Binding MessageCount, StringFormat='received {0} messages'}" HorizontalOptions="CenterAndExpand" />
    <Label Text="{Binding CraftTelemetry.AtmosphericPressure}" HorizontalOptions="CenterAndExpand" />
    <Button Text="Go" Clicked="ConnectWebSocket" />
  </StackLayout>
</ContentPage>