<UserControl
    x:Class="Pegasus.Phone.XF.Windows.Controls.MapRenderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pegasus.Phone.XF.Windows.Controls"
    xmlns:converters="using:Pegasus.Phone.XF.Windows.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:maps="using:Bing.Maps"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <ResourceDictionary>
            <converters:PositionToLocationConverter x:Key="PositionToLocationConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <maps:Map x:Name="Map" x:FieldModifier="public">
        <maps:MapItemsControl x:Name="MapItems" x:FieldModifier="public">
            <maps:MapItemsControl.ItemTemplate>
                <DataTemplate>
                    <Ellipse
                        Height="20" Width="20"
                        Fill="Red"
                        Stroke="White" StrokeThickness="2"
                        maps:MapLayer.Position="{Binding Position, Converter={StaticResource PositionToLocationConverter}}"
                        />
                </DataTemplate>
            </maps:MapItemsControl.ItemTemplate>
        </maps:MapItemsControl>
    </maps:Map>
</UserControl>
