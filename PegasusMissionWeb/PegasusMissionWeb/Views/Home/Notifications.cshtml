<body ng-app="pegasus" style="background-image:url('/img/sky.jpg'); background-repeat: no-repeat; background-size: cover;">
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a><a class="brand" href="index">The Pegasus Mission</a>
                @Html.ActionLink("Home", "Index", null, new Dictionary<string, object> { { "class", "btn btn-link" }, { "role", "button" } })
            </div>
        </div>
    </div>

    <div class="main-inner">
        <div class="container">

            <div class="widget-header" style="width:600px;">
                <h3>
                    <span class="fa fa-rocket">&nbsp;</span> Sign up now for Pegasus II Text Notifications.
                </h3>
                <span class="fa fa-minus-square-o minimizeWidget"></span>

            </div>

            <div class="widget-content" style="width:600px;">
                <div class="widget big-stats-container">
                    <div class="widget-content">
                        <div id="big_stats" class="cf">
                            <div style="padding-left:5em;font-family:Verdana;">
                                Pegasus II can send you text notifications to your phone directly from the craft during flight.
                                Don't miss a moment of this historic flight to near space and sign up for notifications.<br /><br />
                                <p style="font-size:small;color:blue">Responding to Pegasus II text messages with "STOP" will cancel notifications.  Responding with "START" will restart the notifications.</p><p />

                                <p>Sign up now, the Mission Team does not want you to miss the launch of Pegasus II.</p>

                                @if(@ViewBag.PhoneError != null)
                                {
                                    <p style="color:red;">@ViewBag.PhoneError</p>
                                }

                                @using (Html.BeginForm("AddPhone", "Home", FormMethod.Post))
                                {
                                    <p>
                                        <div style="width:200px">
                                            <b style="width:500px;">Country Code (if not US)</b>
                                        </div>
                                        <div style="width:250px">
                                            @Html.TextBox("countryCode") @*<input type="text" id="countryCode" style="width:50px;" />*@
                                        </div>
                                        <div style="width:200px">
                                            <b style="width:500px;">Phone Number</b>
                                        </div>
                                        <div style="width:250px">
                                            @Html.TextBox("number") @*<input type="text" id="number" style="width:120px" />*@
                                        </div>
                                        <div style="width:200px">
                                        </div>
                                        <div style="width:250px">
                                            <input type="submit" value="Sign Up" />
                                        </div>
                                        
                                    </p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
